<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lab7.ClassViewController">
   <children>
      <VBox maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="400.0">
         <children>
            <TextArea fx:id="studentInfo" editable="false" prefHeight="125.0" prefWidth="400.0" />
            <TableView fx:id="degreeList" editable="true" prefHeight="400.0" prefWidth="400.0">
               <columns>
                  <TableColumn fx:id="comment" prefWidth="200.0" text="Title" />
                  <TableColumn fx:id="degree" prefWidth="200.0" text="Degree" />
               </columns>
            </TableView>
            <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="75.0" prefWidth="400.0">
               <children>
                  <Button fx:id="backButton" mnemonicParsing="false" onMouseClicked="#onBackButtonClick" prefHeight="27.0" prefWidth="110.0" text="Back" />
                  <Button fx:id="resignButton" mnemonicParsing="false" onMouseClicked="#onResignButtonClick" prefHeight="27.0" prefWidth="110.0" text="Resign" />
                  <Button fx:id="changeInfoButton" mnemonicParsing="false" onMouseClicked="#onChangeInfoButtonClick" prefHeight="27.0" prefWidth="110.0" text="Attendance" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
